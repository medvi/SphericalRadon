function ISRadonExample

    I = imread('images\TestFromArticle-grayscale.png','png');
    %N = 99;
    %I = ones(N+1,N+1);
    %I(40:60,40:60) = 0;
    N_phi = 99;
    N_r = 99;
    N = size(I,1)-1;
    R0 = 10;
    h_phi = 2*pi / (N_phi + 1);
    h_r = 2*R0 / N_r;
    h_x = 2*R0 / (N+1);
    
