    p(2,:) = R0*sin((0:N_phi).*h_phi);
    
    x = zeros(N+1, N+1, 2, 'double');
    x(:, :, 1) = transpose(-R0+ones(N+1,1)*(0:N).*h_x);
    x(:, :, 2) = -R0+ones(N+1,1)*(0:N).*h_x;
